<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homeContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5FFE6"
    tools:context=".ui.TipsFragment">

    <dev.redfox.planetpulse.ui.CustomVideoView
        android:id="@+id/videoView"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sofiaprosoftbold"
        android:text="Hi Kiran Kishore,"
        android:textSize="30sp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/videoView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/videoView" />

    <TextView
        android:id="@+id/tvCarbonFootprint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Let's neutralize your carbon footprint!"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
       android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvName" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cvThought"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-25dp"
        android:backgroundTint="@color/material_green_dark"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/videoView">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:fontFamily="@font/sofiaprosoftmedium"
            android:textColor="@color/white"
            android:text=" Calculate"
            android:textSize="25sp" />

    </androidx.cardview.widget.CardView>



    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:animationCache="true"
        android:scrollbars="none"
        android:layout_marginTop="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cvThought"
        android:layout_marginHorizontal="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <androidx.cardview.widget.CardView
                android:id="@+id/cvTip0"
                android:layout_width="170dp"
                android:layout_height="140dp"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="5dp"
                app:cardCornerRadius="15dp"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/im1"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="16dp"
                    android:gravity="bottom"
                    android:fontFamily="@font/sofiaprosoftbold"
                    android:textColor="@color/white"
                    android:text="Transition to a plant-based diet"

                    android:textSize="16sp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvTip1"
                android:layout_width="170dp"
                android:layout_height="140dp"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="5dp"
                app:cardCornerRadius="15dp"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/im2"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="15dp"
                    android:gravity="bottom"
                    android:fontFamily="@font/sofiaprosoftbold"
                    android:textColor="@color/white"
                    android:text="Reduce car usage"

                    android:textSize="16sp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvTip2"
                android:layout_width="170dp"
                android:layout_height="140dp"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="5dp"
                app:cardCornerRadius="15dp"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/im3"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="15dp"
                    android:gravity="bottom"
                    android:fontFamily="@font/sofiaprosoftbold"
                    android:textColor="@color/white"
                    android:text="Use renewable energy"

                    android:textSize="16sp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvTip3"
                android:layout_width="170dp"
                android:layout_height="140dp"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="5dp"
                app:cardCornerRadius="15dp"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/im4"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="15dp"
                    android:gravity="bottom"
                    android:fontFamily="@font/sofiaprosoftbold"                    android:textColor="@color/white"
                    android:text="Use renewable energy"

                    android:textSize="16sp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvTip4"
                android:layout_width="170dp"
                android:layout_height="140dp"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="5dp"
                app:cardCornerRadius="15dp"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/im5"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="15dp"
                    android:gravity="bottom"
                    android:textColor="@color/white"
                    android:fontFamily="@font/sofiaprosoftbold"
                    android:text="Use energy-efficient appliances"

                    android:textSize="16sp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvTip5"
                android:layout_width="170dp"
                android:layout_height="140dp"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="5dp"
                app:cardCornerRadius="15dp"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/im6"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="15dp"
                    android:gravity="bottom"
                    android:textColor="@color/white"
                    android:fontFamily="@font/sofiaprosoftbold"
                    android:text="Reduce water consumption"

                    android:textSize="16sp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvTip6"
                android:layout_width="170dp"
                android:layout_height="140dp"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="5dp"
                app:cardCornerRadius="15dp"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/im7"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="15dp"
                    android:gravity="bottom"
                    android:textColor="@color/white"
                    android:fontFamily="@font/sofiaprosoftbold"
                    android:text="Reduce plastic use"

                    android:textSize="16sp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvTip7"
                android:layout_width="170dp"
                android:layout_height="140dp"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="5dp"
                app:cardCornerRadius="15dp"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/im8"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="15dp"
                    android:gravity="bottom"
                    android:textColor="@color/white"
                    android:fontFamily="@font/sofiaprosoftbold"
                    android:text="Buy local and seasonal food"

                    android:textSize="16sp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvTip8"
                android:layout_width="170dp"
                android:layout_height="140dp"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="5dp"
                app:cardCornerRadius="15dp"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/im10"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="15dp"
                    android:gravity="bottom"
                    android:textColor="@color/white"
                    android:fontFamily="@font/sofiaprosoftbold"
                    android:text="Support sustainable companies"
                    android:textSize="16sp" />
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/cvTip9"
                android:layout_width="170dp"
                android:layout_height="140dp"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="5dp"
                app:cardCornerRadius="15sp"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/im9"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="15dp"
                    android:gravity="bottom"
                    android:textColor="@color/white"
                    android:fontFamily="@font/sofiaprosoftbold"
                    android:text="Plant trees"
                    android:textSize="16sp" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </HorizontalScrollView>

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Switch"
        tools:layout_editor_absoluteX="71dp"
        tools:layout_editor_absoluteY="365dp" />


</androidx.constraintlayout.widget.ConstraintLayout>